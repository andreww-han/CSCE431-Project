<%= form_with(model: meeting) do |meeting_form| %>
  <% if meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being joined:</h2>

      <ul>
        <% meeting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= meeting_form.label :status %>
    <%= meeting_form.check_box :status %>
  </div>
  <div class="field">
    <%= meeting_form.label :name %>
    <%= meeting_form.text_field :name %>
  </div>
  <div class="field">
    <%= meeting_form.label :date %>
    <%= meeting_form.date_select :date %>
  </div>

  <div class="actions">
    <%= meeting_form.submit %>
  </div>
<% end %>
