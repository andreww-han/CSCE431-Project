<div class='wrapper'>
  <%= render(:partial => 'navbar', :locals => {:is_logged_in => true}) %>
  <div class='container'>

    <p id="notice"><%= notice %></p>

    <h1>Meetings</h1>
    <%= link_to("To Home Page", {:controller => 'announcements', :action=>'index'}, :class => 'underline')%>

    <table>
      <thead>
        <tr>
          <th>Status</th>
          <th>Name</th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @meetings.each do |meeting| %>
          <tr>
            <td><%= meeting.status %></td>
            <td><%= meeting.name %></td>
            <td><%= meeting.date %></td>
            <td><%= link_to 'Show', meeting %></td>
            <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
            <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Meeting', new_meeting_path, :class => 'underline' %>

  </div>
</div>
